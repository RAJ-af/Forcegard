<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tvLockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIMIT REACHED"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLockSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Device is currently locked."
        android:textColor="#AAAAAA"
        android:textSize="18sp"
        android:textAlignment="center" />

    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="#EF4444" />

    <TextView
        android:id="@+id/tvTimeRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resets in: 00:00:00"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvResetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Next reset: -"
        android:textColor="#888888"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnAction"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#1A1A1A"
        android:text="ACTION"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

</LinearLayout>
