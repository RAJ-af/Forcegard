<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="#CC000000"
     android:clickable="true"
     android:focusable="true">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_centerInParent="true"
         android:background="@drawable/glass_container"
         android:elevation="16dp"
         android:padding="32dp"
         android:layout_marginHorizontal="40dp"
         android:orientation="vertical">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:fontFamily="sans-serif-medium"
             android:textSize="24sp"
             android:textColor="#FFFFFF"
             android:id="@+id/tvExitAppName"
             android:layout_gravity="center_horizontal"
             android:text="Close X?" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="18sp"
             android:textColor="#FFB300"
             android:layout_marginTop="8dp"
             android:id="@+id/tvTimeRemaining"
             android:layout_gravity="center_horizontal"
             android:text="04:47 remaining" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:textSize="15sp"
             android:textColor="#B0B0B0"
             android:layout_marginTop="16dp"
             android:layout_gravity="center_horizontal"
             android:text="Your timer is still running.\nClosing will end your session." />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="center"
             android:orientation="vertical"
             android:layout_marginTop="28dp">

            <TextView
                 android:layout_height="60dp"
                 android:layout_width="match_parent"
                 android:background="@drawable/button_rounded_white"
                 android:gravity="center"
                 android:clickable="true"
                 android:textSize="17sp"
                 android:fontFamily="sans-serif-medium"
                 android:textAllCaps="false"
                 android:textColor="#1E1E1E"
                 android:focusable="true"
                 android:id="@+id/btnNoKeepRunning"
                 android:text="Keep Running" />

            <TextView
                 android:layout_height="60dp"
                 android:layout_width="match_parent"
                 android:background="@drawable/button_rounded_transparent"
                 android:gravity="center"
                 android:clickable="true"
                 android:textSize="17sp"
                 android:textAllCaps="false"
                 android:textColor="#FF5252"
                 android:layout_marginTop="12dp"
                 android:focusable="true"
                 android:id="@+id/btnYesCloseApp"
                 android:text="Close App" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>